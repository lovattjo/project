<%- include('partials/header'); %> 
<% if (locals.errors && locals.errors.register) { %>
	<% locals.errors.register.forEach(function(error) { %>
		<p class="alert alert-primary" role="alert"><%= error %></p>
	<% }) %>
<% } %>	
<div id="main">
  <div class="container-fluid">
    <div class="row">
      <main role="main" class="col-md-6 offset-md-3">
        <h1>Main</h1>
		<form action="/register" method="post">
			<div class="form-group">
			  <label for="email">Email address</label>
			  <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="Email">
			  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			</div>
			<div class="form-group">
			  <label for="password">Password</label>
			  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
			</div>
			<div class="form-group">
				<label for="password">Password Confirm</label>
				<input type="password" class="form-control" id="password" name="passwordConfirm" placeholder="Confirm Password">
			  </div>
			<button type="submit" class="btn btn-primary">Register</button>
		  </form>
      </main>
    </div> <!-- end .row --> 
  </div><!-- end .container-fluid -->
</div><!-- end #main -->
<%- include('partials/footer'); %>

